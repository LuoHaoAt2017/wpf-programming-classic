<Window x:Class="Chapter17ControlTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter17ControlTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="MobilePhoneDataTemplate" DataType="{x:Type local:MobilePhone}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Path=Name, Mode=OneWay}" Grid.Column="0" FontWeight="Bold"></TextBlock>
                <TextBlock Text="{Binding Path=Brand, Mode=OneWay}" Grid.Column="1"></TextBlock>
                <TextBlock Text="{Binding Path=Price, Mode=OneWay}" Grid.Column="2"></TextBlock>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListBox Name="phoneList" ItemTemplate="{StaticResource MobilePhoneDataTemplate}"></ListBox>
    </Grid>
</Window>
